<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".ImageEditActivity">

    <ja.burhanrashid52.photoeditor.PhotoEditorView
        android:id="@+id/photoEditorView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/editing_tools_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:photo_src="@drawable/ic_album_placeholder" />

    <LinearLayout
        android:id="@+id/top_action_bar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#80000000"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imgClose"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close Editor"
            android:src="@drawable/ic_delete"
            app:tint="@android:color/white" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imgUndo"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Undo"
            android:src="@drawable/ic_restore"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/imgRedo"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Redo"
            android:rotationY="180"
            android:src="@drawable/ic_restore"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/imgSave"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Save Image"
            android:src="@drawable/ic_move"
            app:tint="@android:color/white" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/editing_tools_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:elevation="4dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgBrush"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Brush Tool"
                android:minWidth="64dp"
                android:padding="8dp"
                android:src="@drawable/ic_edit"
                app:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/imgText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Add Text"
                android:minWidth="64dp"
                android:padding="8dp"
                android:src="@drawable/ic_text_format"
                app:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/imgFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Apply Filter"
                android:minWidth="64dp"
                android:padding="8dp"
                android:src="@drawable/ic_filter"
                app:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/imgBrightness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Adjust Brightness"
                android:minWidth="64dp"
                android:padding="8dp"
                android:src="@drawable/ic_brightness"
                app:tint="@android:color/white" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/tool_properties"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="#DD000000"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/editing_tools_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_action_bar"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Brush Size"
            android:textColor="@android:color/white" />
        <SeekBar
            android:id="@+id/brushSizeSeekBar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:max="100"
            android:progress="20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Brush Color"
            android:textColor="@android:color/white" />
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/brushColorPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:id="@+id/colorRed"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/circle_color_picker"
                    android:backgroundTint="@android:color/holo_red_light" />
                <View
                    android:id="@+id/colorBlue"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/circle_color_picker"
                    android:backgroundTint="@android:color/holo_blue_light" />
                <View
                    android:id="@+id/colorGreen"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/circle_color_picker"
                    android:backgroundTint="@android:color/holo_green_light" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/filter_recyclerview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#DD000000"
        android:orientation="horizontal"
        android:padding="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/editing_tools_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>